class Bullet {
    field int x, y;
    field boolean active;

    constructor Bullet new(int posX,int PosY){
        let x = posX;
        let y = PosY;
        let active = true;

        do draw();
        return this;
    }

    method void draw() {
        do Screen.setColor(true);
        do Screen.drawRectangle(x, y, x + 4, y + 4);
        return;
    }

    method void clear(){ 
        do Screen.setColor(false);
        do Screen.drawRectangle(x, y, x + 4, y + 4);
        return;
    }

    method void move() {
        if (active) {
            do clear();
            if (y > 0) {
                let y = y - 20;
                do draw();
            } else {
                let active = false;
            }
        }
        return;
    }

    method int isActive() {
        return active;
    }

    method void dispose() {
    if (active) {          // Solo ejecutar si la bala est√° activa
        do clear();        // Borrar la bala de la pantalla
        let active = false; // Marcar la bala como inactiva
    }
    return;
}
        
	method int getX() {
		return x;
	}
    method int getY() {
		return y;
	}
}